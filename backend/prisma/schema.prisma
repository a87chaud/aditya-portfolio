generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // We will store the hashed version
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Experience {
  id           String    @id @default(uuid())
  company      String
  position     String
  startDate    DateTime
  endDate      DateTime?
  description  String
  current      Boolean   @default(false)
  order        Int
  technologies String[]
}

model Project {
  id          String @id @default(uuid())
  title       String
  description String
  technologies String[]
  githubUrl   String?
  liveUrl    String?
  imageUrl   String?
  featured    Boolean @default(false)
  order       Int
  createdAt  DateTime?
}

model BlogPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  summary   String?
  tags      String[]
  published Boolean  @default(false)
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
}